<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/level_group_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/level_group_margin"
        android:layout_marginRight="@dimen/level_group_margin"
        android:layout_marginTop="@dimen/level_group_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white_text"
        android:textIsSelectable="false" />


    <TextView
        android:id="@+id/level_group_description"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/level_group_margin"
        android:layout_marginRight="@dimen/level_group_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white_text"
        android:textIsSelectable="false" />
    
    
    <ProgressBar
        android:id="@+id/level_group_percentage"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" />

</LinearLayout>